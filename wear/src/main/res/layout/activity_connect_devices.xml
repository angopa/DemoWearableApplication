<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_connect_devices"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context="demos.android.com.craneo.demowearableapplication.ConnectDevicesActivity"
    tools:device="wear">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="4"
        android:useDefaultMargins="false">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:gravity="center"
            android:onClick="buttonClickHandler"
            android:text="@string/london"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:onClick="buttonClickHandler"
            android:text="@string/hong_kong"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:gravity="center"
            android:onClick="buttonClickHandler"
            android:text="@string/paris"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:gravity="center"
            android:onClick="buttonClickHandler"
            android:text="@string/san_francisco"/>
    </GridLayout>

</RelativeLayout>
